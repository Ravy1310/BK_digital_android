<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- IZIN INTERNET -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Login"
        android:usesCleartextTraffic="true">

        <!-- =============================== -->
        <!--  LAUNCHER ACTIVITY (LOGIN)     -->
        <!-- =============================== -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">

            <!-- INI YANG MEMBUAT LOGIN JADI HALAMAN AWAL APP -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!-- =============================== -->
        <!--  DASHBOARD ACTIVITY (UTAMA SETELAH LOGIN) -->
        <!-- =============================== -->
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- Jika kamu juga membutuhkan DashboardMain (file terpisah) -->
        <activity
            android:name=".ui.dashboard.DashboardMainHelper"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>
