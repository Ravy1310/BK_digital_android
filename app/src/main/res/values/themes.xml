<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/button_primary_text</item>
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/button_primary_text</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Item tema tambahan -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:windowBackground">@color/background_light</item>

        <!-- PERBAIKAN DI SINI: -->
        <item name="colorSurface">@color/background_light</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Untuk Material 3 (jika menggunakan) -->
        <!-- <item name="materialThemeOverlay">@style/ThemeOverlay.Login</item> -->
    </style>
</resources>