<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#BFD6E9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:visibility="gone" />

            <!-- KOTAK STATISTIK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp">

                <!-- CARD 1 - JUMLAH SISWA -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#38A169"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/jumlahsiswa"
                                app:tint="#FFFFFF"
                                android:contentDescription="icon jumlah siswa" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Siswa"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/tv_jumlah_siswa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CARD 2 - JUMLAH GURU -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#5A67D8"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/jumlahguru"
                                app:tint="#FFFFFF"
                                android:contentDescription="icon jumlah guru"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Guru"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/tv_jumlah_guru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CARD 3 - JUMLAH TES -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="#F29A4E"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/jumlahtes"
                                app:tint="#ffffff"
                                android:contentDescription="icon jumlah tes" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Jumlah Tes"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_jumlah_tes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- SECTION TITLE dengan "Lihat Semua" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tv_title_tes_terpopuler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tes Terpopuler"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"/>

                <View
                    android:id="@+id/view_spacer"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_lihat_semua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:text="Lihat Semua"
                    android:textSize="14sp"
                    android:textColor="#1E40AF"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="lihat semua tes" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_subtitle_tes_terpopuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tes yang paling banyak dikerjakan siswa"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp"/>

            <!-- LIST ITEM (DINAMIS) -->
            <LinearLayout
                android:id="@+id/container_tes_terpopuler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Item tes akan ditambahkan secara dinamis di sini -->
            </LinearLayout>

            <!-- Error State -->
            <LinearLayout
                android:id="@+id/errorLayout"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <!-- Solusi 1: Ganti dengan AppCompatImageView -->
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_error_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_dialog_alert"
                    app:tint="#FF6B6B"
                    android:layout_marginBottom="16dp"/>

                <!-- Solusi 2: Atau gunakan ImageView biasa tanpa tint -->
                <!--
                <ImageView
                    android:id="@+id/iv_error_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_error"  // Gunakan drawable custom
                    android:layout_marginBottom="16dp"/>
                -->

                <TextView
                    android:id="@+id/tv_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gagal memuat data"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btn_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coba Lagi"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="12dp"
                    app:backgroundTint="#1E40AF"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>