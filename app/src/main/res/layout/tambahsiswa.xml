<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="40dp">

<!-- Form Container dengan margin di semua sisi -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_background_blue_light"
        android:elevation="16dp"
        android:orientation="vertical"
        android:outlineProvider="background"
        android:padding="35dp"
        android:radius="35dp" >

        <!-- Header MASUK ke dalam form container -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="35dp"
            android:text="Tambah Data Siswa"
            android:textColor="#333333"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- ID Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="ID"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etID"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/edittext_background_white"
            android:gravity="center_vertical"
            android:hint="Masukkan ID siswa"
            android:inputType="text"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

        <!-- Nama Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Nama"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/edittext_background_white"
            android:gravity="center_vertical"
            android:hint="Masukkan nama lengkap"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

        <!-- Kelas Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Kelas"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etKelas"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/edittext_background_white"
            android:gravity="center_vertical"
            android:hint="Masukkan kelas"
            android:inputType="text"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

        <!-- Tahun Masuk Field -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Tahun Masuk"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTahunMasuk"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/edittext_background_white"
            android:gravity="center_vertical"
            android:hint="Masukkan tahun masuk"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="15sp" />

        <!-- Jenis Kelamin -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Jenis Kelamin"
            android:textColor="#666666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgJenisKelamin"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbLaki"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_weight="1"
                android:background="@drawable/radio_background_white"
                android:buttonTint="#4CAF50"
                android:padding="15dp"
                android:text="Laki-laki"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rbPerempuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:background="@drawable/radio_background_white"
                android:buttonTint="#4CAF50"
                android:padding="15dp"
                android:text="Perempuan"
                android:textSize="10sp" />
        </RadioGroup>

        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="32dp"
            android:background="#E0E0E0" />

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnBatal"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/red_rounded_button"
                android:text="Batal"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="Simpan"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

    </ScrollView>