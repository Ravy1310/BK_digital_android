<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah Soal untuk Tes: [Nama Tes]"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp" />

                <!-- Error Message (GONE by default) -->
                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8D7DA"
                    android:textColor="#721C24"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp" />

                <!-- Form Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Pertanyaan -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pertanyaan"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etPertanyaan"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Masukkan pertanyaan..."
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:padding="12dp"
                        android:background="@drawable/edittext_background"
                        android:layout_marginBottom="24dp" />

                    <!-- Opsi Jawaban + Bobot -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Opsi Jawaban + Bobot"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="8dp" />

                    <!-- Container untuk opsi dinamis -->
                    <LinearLayout
                        android:id="@+id/containerOpsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <!-- Opsi 1 -->
                        <LinearLayout
                            android:id="@+id/opsiItem1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <EditText
                                android:id="@+id/etOpsi1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Opsi jawaban"
                                android:padding="12dp"
                                android:background="@drawable/edittext_background" />

                            <EditText
                                android:id="@+id/etBobot1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:hint="Bobot"
                                android:inputType="number"
                                android:text="1"
                                android:padding="12dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/edittext_background" />

                            <Button
                                android:id="@+id/btnHapus1"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="×"
                                android:textSize="20sp"
                                android:textColor="@android:color/white"
                                android:background="@drawable/btn_danger_circle"
                                android:layout_marginStart="10dp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <!-- Opsi 2 -->
                        <LinearLayout
                            android:id="@+id/opsiItem2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="10dp">

                            <EditText
                                android:id="@+id/etOpsi2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Opsi jawaban"
                                android:padding="12dp"
                                android:background="@drawable/edittext_background" />

                            <EditText
                                android:id="@+id/etBobot2"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:hint="Bobot"
                                android:inputType="number"
                                android:text="1"
                                android:padding="12dp"
                                android:layout_marginStart="10dp"
                                android:background="@drawable/edittext_background" />

                            <Button
                                android:id="@+id/btnHapus2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="×"
                                android:textSize="20sp"
                                android:textColor="@android:color/white"
                                android:background="@drawable/btn_danger_circle"
                                android:layout_marginStart="10dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Tombol Tambah Opsi -->
                    <Button
                        android:id="@+id/btnTambahOpsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+ Tambah Opsi"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:background="@android:color/transparent"
                        android:padding="12dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Garis pemisah -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="20dp" />

                    <!-- Tombol Footer -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="space_between">

                        <Button
                            android:id="@+id/btnKembali"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kembali"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:background="@android:color/transparent"
                            android:padding="12dp" />

                        <Button
                            android:id="@+id/btnSimpan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Simpan"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="@drawable/btn_primary_rounded" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>