<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.auth.LoginActivity">

    <!-- Background Biru Melengkung -->
    <View
        android:id="@+id/rectangle_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_2"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo BK Digital -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/logo_size_medium"
        android:layout_height="@dimen/logo_size_medium"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="@string/logo_description"
        android:focusable="true"
        android:scaleType="centerInside"
        android:src="@drawable/logo_bk_digital"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Welcome Texts -->

    <TextView
        android:id="@+id/welcomeText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginTop="76dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/welcome_text1"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_xxlarge"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginTop="@dimen/margin_small"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/welcome_text2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_xlarge"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeText1" />

    <!-- Container untuk FORM yang lebih kecil -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginEnd="@dimen/margin_xlarge"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="@dimen/margin_xlarge"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/max_width_form">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_large">

            <!-- Username Field -->
            <TextView
                android:id="@+id/usernameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/username_label"
                android:textColor="#000000"
                android:textSize="@dimen/text_normal" />

            <EditText
                android:id="@+id/usernameEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/margin_large"
                android:autofillHints="email"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:hint="@string/username_hint"
                android:importantForAutofill="yes"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:textSize="@dimen/text_normal" />

            <!-- Password Field -->
            <TextView
                android:id="@+id/passwordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="@string/password_label"
                android:textColor="#000000"
                android:textSize="@dimen/text_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/margin_large">

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autofillHints="password"
                    android:background="@drawable/edittext_background"
                    android:gravity="center_vertical"
                    android:hint="@string/password_hint"
                    android:importantForAutofill="yes"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="@dimen/padding_medium"
                    android:paddingEnd="48dp"
                    android:textSize="@dimen/text_normal" />

                <ImageView
                    android:id="@+id/passwordToggle"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:contentDescription="@string/toggle_password_description"
                    android:padding="10dp"
                    android:src="@android:drawable/ic_lock_lock"
                    app:tint="#757575" />

            </RelativeLayout>

            <!-- Login Button -->
            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/rounded_button"
                android:elevation="4dp"
                android:gravity="center"
                android:minHeight="@dimen/touch_target_min"
                android:stateListAnimator="@null"
                android:text="@string/login_button"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

            <!-- Lupa Password -->

            <!-- OR Separator -->

            <!-- Google Sign In Button -->

            <TextView
                android:id="@+id/forgotPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:clickable="true"
                android:focusable="true"
                android:minWidth="@dimen/touch_target_min"
                android:minHeight="@dimen/touch_target_medium"
                android:padding="@dimen/padding_small"
                android:text="@string/forgot_password"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />



            <LinearLayout
                android:id="@+id/googleLoginButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@drawable/google_button_background"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:gravity="center"
                android:minHeight="@dimen/touch_target_min"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium">

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:contentDescription="@string/google_logo_description"
                    android:scaleType="fitCenter"
                    android:src="@drawable/googlebutton" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/google_login_button"
                    android:textColor="#3C4043"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="normal" />
            </LinearLayout>

            <!-- Register Link -->
            <TextView
                android:id="@+id/registerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:focusable="true"
                android:minWidth="@dimen/touch_target_min"
                android:minHeight="@dimen/touch_target_min"
                android:padding="@dimen/padding_small"
                android:text="@string/register_link"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/text_normal"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="#E0E0E0" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/progress_size_medium"
        android:layout_height="@dimen/progress_size_medium"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>