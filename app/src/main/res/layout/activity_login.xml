<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="0dp"
    tools:context=".ui.auth.LoginActivity">

    <!-- Background Biru Melengkung -->
    <View
        android:id="@+id/rectangle_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rectangle_2"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo BK Digital -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/logo_size_small"
        android:layout_height="@dimen/logo_size_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:contentDescription="Logo BK Digital"
        android:focusable="true"
        android:scaleType="centerInside"
        android:src="@drawable/logo_bk_digital"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Welcome Text -->
    <LinearLayout
        android:id="@+id/welcomeTextContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_xlarge"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/margin_small"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Di BK Digital"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Container untuk FORM -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xxlarge"
        android:layout_marginEnd="@dimen/margin_xxlarge"
        android:layout_marginBottom="@dimen/margin_xxlarge"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_xlarge">

            <!-- Username Field -->
            <TextView
                android:id="@+id/usernameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="Email/Username"
                android:textColor="#000000"
                android:textSize="@dimen/text_medium" />

            <EditText
                android:id="@+id/usernameEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@drawable/edittext_background"
                android:hint="Masukkan email atau username"
                android:maxLines="1"
                android:paddingStart="@dimen/padding_large"
                android:paddingEnd="@dimen/padding_large"
                android:textSize="@dimen/text_normal"
                android:inputType="textEmailAddress" />

            <!-- Password Field -->
            <TextView
                android:id="@+id/passwordLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="Password"
                android:textColor="#000000"
                android:textSize="@dimen/text_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginBottom="@dimen/margin_xlarge">

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_background"
                    android:hint="Masukkan password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="56dp"
                    android:textSize="@dimen/text_normal" />

                <ImageView
                    android:id="@+id/passwordToggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_large"
                    android:contentDescription="Toggle password visibility"
                    android:src="@android:drawable/ic_lock_lock" />

            </RelativeLayout>

            <!-- Login Button -->
            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/rounded_button"
                android:elevation="2dp"
                android:stateListAnimator="@null"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_medium" />

            <!-- Lupa Password -->
            <TextView
                android:id="@+id/forgotPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lupa Password?"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_normal"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:clickable="true"
                android:focusable="true"
                android:layout_gravity="center_horizontal" />

            <!-- OR Separator -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:paddingStart="@dimen/padding_xlarge"
                android:paddingEnd="@dimen/padding_xlarge">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="#E0E0E0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@android:color/white"
                    android:paddingStart="@dimen/padding_large"
                    android:paddingEnd="@dimen/padding_large"
                    android:text="ATAU"
                    android:textColor="#757575"
                    android:textSize="@dimen/text_small" />

            </RelativeLayout>

            <!-- Google Sign In Button -->
            <LinearLayout
                android:id="@+id/googleLoginButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/margin_xlarge"
                android:background="@drawable/google_button_background"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:elevation="2dp"
                android:padding="@dimen/padding_medium">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/googlebutton"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:contentDescription="Logo Google" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Masuk dengan Google"
                    android:textColor="#3C4043"
                    android:textSize="@dimen/text_normal"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Register Link -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belum punya akun? "
                    android:textColor="#757575"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/registerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Daftar"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_normal" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Progress Bar (optional, untuk loading state) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>