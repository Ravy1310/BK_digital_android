<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/soalCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header dengan judul tes dan status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvKategoriTes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kategori Tes"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDeskripsiTes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi tes akan muncul di sini"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Status Tes -->
            <TextView
                android:id="@+id/tvStatusTes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aktif"
                android:textSize="10sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="3dp"
                android:background="@drawable/bg_status_aktif"
                android:textColor="@color/green_dark" />

        </LinearLayout>

        <!-- Jumlah Soal -->
        <TextView
            android:id="@+id/tvJumlahSoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah soal: 0"
            android:textColor="@color/gray_500"
            android:textSize="12sp"
            android:layout_marginBottom="16dp" />

        <!-- Tombol Aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <!-- Tombol Aktif/Nonaktif -->
            <!-- Warna akan diubah secara dinamis di kode Java/Kotlin -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggleStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nonaktifkan"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                app:icon="@drawable/ic_pause"
                app:iconSize="16dp"
                app:iconGravity="start"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/yellow_warning"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp" />

            <!-- Tombol Edit -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditTes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                app:icon="@drawable/ic_edit"
                app:iconSize="16dp"
                app:iconGravity="start"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/green_success"
                android:textColor="@color/white"
                android:layout_marginEnd="8dp" />

            <!-- Tombol Hapus -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHapusTes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="16dp"
                app:iconGravity="start"
                app:iconTint="@color/white"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/red_primary" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>