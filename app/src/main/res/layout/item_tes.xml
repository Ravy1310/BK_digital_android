<?xml version="1.0" encoding="utf-8"?>
<!-- File: app/src/main/res/layout/item_tes.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Kotak icon -->
        <LinearLayout
            android:id="@+id/iconContainer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/icon_backgorund"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#2196F3" />

                <ImageView
                    android:id="@+id/iconImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/orang"
                    android:scaleType="centerInside"
                    android:layout_gravity="center" />

            </FrameLayout>
        </LinearLayout>

        <!-- Container untuk teks -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Header dengan nama tes dan status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvNamaTes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nama Tes"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aktif"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/bg_status_aktif"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi tes"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvJumlahSoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 soal"
                android:textSize="14sp"
                android:textColor="#2196F3"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>