<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D6E6F3">

    <!-- Header tanpa background putih -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:paddingBottom="8dp"
        android:background="#D6E6F3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelola Tes : Tes Minat Belajar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar semua soal yang terkait dengan tes ini."
            android:textSize="11sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <!-- Container untuk konten soal - TANPA SCROLLVIEW -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#BFD6E9">

        <!-- Satu kotak besar berisi semua soal - DIPERKECIL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_margin="12dp"
            android:elevation="0.5dp"
            android:minHeight="800dp"
            android:background="@drawable/kotaksoal">

            <!-- Judul "Total 3 soal untuk tes ini" di bagian atas kotak -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total 3 soal untuk tes ini"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="10dp"/>

            <!-- Soal 1 - DIPERKECIL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <!-- Pertanyaan dengan nomor -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Ketika mencoba mengingat petunjuk arah, cara apa yang paling efektif bagi anda?"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="6dp"
                    android:lineSpacingExtra="2dp"/>

                <!-- Jawaban A -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (Bobot 3) Membayangkan peta"
                    android:textSize="11sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="2dp"/>

                <!-- Jawaban B -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (Bobot 1) Mengulang dengan suara keras"
                    android:textSize="11sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="2dp"/>

                <!-- Jawaban C -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (Bobot 2) Bergerak atau menunjuk"
                    android:textSize="11sp"
                    android:textColor="#333333"
                    android:paddingLeft="2dp"/>

                <!-- Tombol Edit dan Hapus untuk Soal 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp">

                    <!-- TextView Edit -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/edit"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:text="Edit"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:drawableLeft="@drawable/edttttt"
                        android:drawablePadding="2dp"
                        android:drawableWidth="12dp"
                        android:drawableHeight="12dp" />

                    <!-- TextView Hapus -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hapus"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:text="hapus"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:drawableLeft="@drawable/hpss"
                        android:drawablePadding="2dp"
                        android:drawableWidth="12dp"
                        android:drawableHeight="12dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Garis pemisah antar soal - DIPERKECIL -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="8dp"/>

            <!-- Soal 2 - DIPERKECIL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <!-- Pertanyaan dengan nomor -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. Ketika mencoba mengingat petunjuk arah, cara apa yang paling efektif bagi anda?"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="6dp"
                    android:lineSpacingExtra="2dp"/>

                <!-- Jawaban A -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (Bobot 3) Membayangkan peta"
                    android:textSize="11sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="2dp"/>

                <!-- Jawaban B -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (Bobot 1) Mengulang dengan suara keras"
                    android:textSize="11sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="2dp"/>

                <!-- Jawaban C -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (Bobot 2) Bergerak atau menunjuk"
                    android:textSize="11sp"
                    android:textColor="#333333"
                    android:paddingLeft="2dp"/>

                <!-- Tombol Edit dan Hapus untuk Soal 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp">

                    <!-- TextView Edit -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/edit"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:text="Edit"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:drawableLeft="@drawable/edttttt"
                        android:drawablePadding="2dp"
                        android:drawableWidth="12dp"
                        android:drawableHeight="12dp" />

                    <!-- TextView Hapus -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hapus"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:text="hapus"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:drawableLeft="@drawable/hpss"
                        android:drawablePadding="2dp"
                        android:drawableWidth="12dp"
                        android:drawableHeight="12dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Garis pemisah antar soal - DIPERKECIL -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="8dp"/>

            <!-- Soal 3 - DIPERKECIL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp">

                <!-- Pertanyaan dengan nomor -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. Ketika mencoba mengingat petunjuk arah, cara apa yang paling efektif bagi anda?"
                    android:textSize="12sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="6dp"
                    android:lineSpacingExtra="2dp"/>

                <!-- Jawaban A -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A. (Bobot 3) Membayangkan peta"
                    android:textSize="11sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="2dp"/>

                <!-- Jawaban B -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B. (Bobot 1) Mengulang dengan suara keras"
                    android:textSize="11sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="4dp"
                    android:paddingLeft="2dp"/>

                <!-- Jawaban C -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C. (Bobot 2) Bergerak atau menunjuk"
                    android:textSize="11sp"
                    android:textColor="#333333"
                    android:paddingLeft="2dp"/>

                <!-- Tombol Edit dan Hapus untuk Soal 3 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp">

                    <!-- TextView Edit -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/edit"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:text="Edit"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:drawableLeft="@drawable/edttttt"
                        android:drawablePadding="2dp"
                        android:drawableWidth="12dp"
                        android:drawableHeight="12dp" />

                    <!-- TextView Hapus -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hapus"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp"
                        android:text="hapus"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:drawableLeft="@drawable/hpss"
                        android:drawablePadding="2dp"
                        android:drawableWidth="12dp"
                        android:drawableHeight="12dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Garis horizontal tipis - DIPERKECIL -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E0E0E0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"/>

            <!-- Garis pemisah sebelum tombol -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#E0E0E0"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Tombol Tambah Soal Baru dan Batal dalam satu baris -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingHorizontal="0dp">

                <!-- Tombol Tambah Soal Baru dengan ikon + -->
                <Button
                    android:id="@+id/btnTambahSoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="+ Tambah soal baru"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:background="@android:color/transparent"
                    android:padding="6dp"
                    android:textAllCaps="false"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/tambah"/>

                <!-- Tombol Batal -->
                <Button
                    android:id="@+id/btnBatal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Batal"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:background="@drawable/batal"
                    android:padding="6dp"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>